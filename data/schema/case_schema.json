{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Municipal Cyber Ethics Case Schema (STRICT, Chapter III aligned)",
  "type": "object",
  "additionalProperties": false,

  "required": [
    "id",
    "title",
    "short_summary",
    "sources",
    "background",
    "technical",
    "ethical",
    "constraints",
    "decision_outcome"
  ],

  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },

    "title": {
      "type": "string",
      "minLength": 1
    },

    "short_summary": {
      "type": "string",
      "minLength": 1
    },

    "sources": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },

    "background": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "technical_operational_background",
        "triggering_condition_key_events"
      ],
      "properties": {
        "technical_operational_background": {
          "type": "string",
          "minLength": 1
        },
        "triggering_condition_key_events": {
          "type": "string",
          "minLength": 1
        }
      }
    },

    "technical": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "decision_context",
        "nist_csf_mapping"
      ],
      "properties": {
        "decision_context": {
          "type": "string",
          "minLength": 1
        },

        "nist_csf_mapping": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["function", "categories", "rationale"],
            "properties": {
              "function": {
                "type": "string",
                "minLength": 1
              },

              "categories": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              },

              "rationale": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    },

    "ethical": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "pfce_analysis",
        "pfce_mapping"
      ],
      "properties": {
        "pfce_analysis": {
          "type": "string",
          "minLength": 1
        },

        "tensions": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "description"],
            "properties": {
              "id": { "type": "string", "minLength": 1 },
              "description": { "type": "string", "minLength": 1 }
            }
          }
        },

        "pfce_mapping": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["principle", "description"],
            "properties": {
              "principle": {
                "type": "string",
                "enum": [
                  "Beneficence",
                  "Non-maleficence",
                  "Autonomy",
                  "Justice",
                  "Explicability"
                ]
              },

              "description": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    },

    "constraints": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "description", "effect_on_decision"],
        "properties": {
          "type": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "effect_on_decision": { "type": "string", "minLength": 1 }
        }
      }
    },

    "decision_outcome": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "decision",
        "outcomes_implications",
        "ethical_implications"
      ],
      "properties": {
        "decision": {
          "type": "string",
          "minLength": 1
        },

        "outcomes_implications": {
          "type": "string",
          "minLength": 1
        },

        "ethical_implications": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
